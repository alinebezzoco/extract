{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/shared/components/*"],
      "@/constants/*": ["src/shared/constants/*"],
      "@/views/*": ["src/views/*"],
      "@/assets/*": ["src/assets/*"],
      "@/api/*": ["src/api/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
  }
}
